---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <h1>ðŸŽ“ Education</h1>
      <div class="education-section">
        <div class="education-item">
          <h4><a href="https://ug.edu.ge/en" target="_blank">The University of Georgia</a></h4>
          <div class="degree">Master of Computer Science</div>
          <div class="field">Computer Science</div>
          <div class="duration"><span>September 2017 - March 2022</span></div>
        </div>

        <div class="education-item">
          <h4><a href="https://www.startupschool.org/" target="_blank">Y Combinatorâ€™s Startup School</a></h4>
          <div class="degree">Graduate</div>
          <div class="field">Entrepreneurship</div>
          <div class="duration"><span>July 2019 - September 2019</span></div>
        </div>

        <div class="education-item">
          <h4><a href="https://www.udacity.com/" target="_blank">Udacity</a></h4>
          <div class="degree">Graduate</div>
          <div class="field">Google Developer Challenge Scholarship to the Front-End Web Developer track</div>
          <div class="duration"><span>November 2017 - February 2018</span></div>
        </div>

        <div class="education-item">
          <h4><a href="https://ug.edu.ge/en" target="_blank">The University of Georgia</a></h4>
          <div class="degree">Bachelor of Computer Science</div>
          <div class="field">Computer Science</div>
          <div class="duration"><span>September 2012 - July 2017</span></div>
        </div>
      </div>
    </main>
    <Footer />
    <style>
      h1 {
        margin-bottom: 20px;
      }
      .education-section {
        display: flex;
        flex-direction: column;
        gap: 30px;
        margin-top: 20px;
      }

      .education-item {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #e1e1e1;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      .education-item h4 {
        font-size: 30px;
        margin-bottom: 10px;
      }

      .education-item a {
        color:#2337ff
        text-decoration: none;
      }

      .education-item a:hover {
        text-decoration: underline;
      }

      .degree {
        font-weight: bold;
        font-size: 24px;
      }

      .field {
        color: #555;
      }

      .duration {
        font-size: 16px;
        color: #777;
      }

      .education-item:last-child {
        margin-bottom: 0;
      }
    </style>
  </body>
</html>
