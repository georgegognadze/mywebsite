---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <h1><span class="emoji">ðŸŽ“ </span>Education</h1>
      <div class="education-section">
        <div class="education-item">
          <h4><a href="https://ug.edu.ge/en" target="_blank">The University of Georgia</a></h4>
          <div class="degree">Master of Computer Science</div>
          <div class="field">Computer Science</div>
          <div class="duration"><span>September 2017 - March 2022</span></div>
        </div>

        <div class="education-item">
          <h4><a href="https://www.startupschool.org/" target="_blank">Y Combinatorâ€™s Startup School</a></h4>
          <div class="degree">Graduate</div>
          <div class="field">Entrepreneurship</div>
          <div class="duration"><span>July 2019 - September 2019</span></div>
        </div>

        <div class="education-item">
          <h4><a href="https://www.udacity.com/" target="_blank">Udacity</a></h4>
          <div class="degree">Graduate</div>
          <div class="field">Google Developer Challenge Scholarship to the Front-End Web Developer track</div>
          <div class="duration"><span>November 2017 - February 2018</span></div>
        </div>

        <div class="education-item">
          <h4><a href="https://ug.edu.ge/en" target="_blank">The University of Georgia</a></h4>
          <div class="degree">Bachelor of Computer Science</div>
          <div class="field">Computer Science</div>
          <div class="duration"><span>September 2012 - July 2017</span></div>
        </div>
      </div>
      <button id="scrollBtn" title="Go to top" style="display: none;">â†‘</button>
    </main>
    <Footer />
    <style>
      h1 {
        margin-bottom: 20px;
      }
      .education-section {
        display: flex;
        flex-direction: column;
        gap: 30px;
        margin-top: 20px;
      }

      .education-item {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #e1e1e1;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      .education-item h4 {
        font-size: 30px;
        margin-bottom: 10px;
      }

      .education-item a {
        color:#2337ff
        text-decoration: none;
      }

      .education-item a:hover {
        text-decoration: underline;
        color: #fff;
        background-color: #2337ff;
      }

      .degree {
        font-weight: bold;
        font-size: 24px;
      }

      .field {
        color: #555;
      }

      .duration {
        font-size: 16px;
        color: #777;
      }

      .education-item:last-child {
        margin-bottom: 0;
      }
      #scrollBtn {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 30px;
        z-index: 99;
        width: 4rem;
        font-size: 1.5rem;
        border: none;
        outline: none;
        background-color: rgb(96 115 159/ 50%);
        color: white;
        cursor: pointer;
        padding: 15px;
        border-radius: 4px;
        scroll-behavior: smooth;
        -webkit-transition: all .3s ease-in-out 0s!important;
        -moz-transition: all .3s ease-in-out 0s!important;
        -o-transition: all .3s ease-in-out 0s!important;
        -webkit-transition: all .3s ease-in-out 0s!important;
        transition: all .3s ease-in-out 0s!important;
    }

      #scrollBtn:hover {
        background-color: rgb(74, 95, 140);
        box-shadow: 4px 4px 2px rgb(96, 115, 159);
        transform: scale(1.1);
      }
    </style>
  </body>
</html>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    let scrollBtn = document.getElementById("scrollBtn");

    if (!scrollBtn) return;

    window.onscroll = function () {
      if (document.documentElement.scrollTop > 200) {
        scrollBtn.style.display = "block";
      } else {
        scrollBtn.style.display = "none";
      }
    };

    scrollBtn.addEventListener("click", function () {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  });
</script>
